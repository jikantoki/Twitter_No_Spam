{
  "name": "Twitter No Spam",
  "description": "Twitter(X)のスパムコメントを排除、厳密には認証済みかつアカウント名に日本語が含まれていないものを非表示にします",
  "version": "1.3.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*",
        "http://x.com/*",
        "https://x.com/*"
      ],
      "js": ["twitterNoSpam.js"],
      "css": ["isSpam.css"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
